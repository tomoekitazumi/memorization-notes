<% if logged_in? %>
  <div class="center jumbotron jumbotron-extend">
    <h1 class="text-center">暗記ノート</h1>
  </div>
  <p><%= link_to '新しいフォルダを作る', new_folder_path %></p>
  <p><%= link_to '新しく問題を作る（フォルダがないと作成できません）', new_quiz_path %></p>
  <p><%= link_to '問題を探す(全てのユーザの問題一覧)', 'folders#index' %></p>
  <%= render 'folders/folders', folders: @folders %>

<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>暗記ノートへようこそ！</h1>
      <h1>ログインして勉強を始めよう！</h1>
      <%= link_to '新規登録', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>