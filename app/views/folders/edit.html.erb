<h1 class="text-center"><%= @folder.content %></h1>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @folder, local: true) do |f| %>
      
      <div class="form-group">
        <%= f.label :name, 'フォルダ名' %>
        <%= f.text_area :content, class: 'form-control' %>
      </div>

      <%= f.submit '完了', class: 'btn btn-primary btn-block' %>
    <% end %>
    <%= link_to 'TOPに戻る', root_path, class: "btn btn-primary mt-5" %>
  </div>
</div>